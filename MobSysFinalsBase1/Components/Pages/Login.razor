@page "/login"

<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <div class="card shadow border-0 p-4" style="border-radius: 8px;">
            <div class="text-center mb-4">
                <img src="imgs/logo.png" alt="GitHub Logo" width="48" class="mb-2" />
                <h3 class="mb-0 fw-semibold">Sign in to Tachiyosi</h3>
            </div>
            @if (!string.IsNullOrWhiteSpace(StatusMessage))
            {
                <div class="alert alert-@Status d-flex align-items-center" role="alert">
                    <i class="fa fa-info-circle me-2"></i>
                    <span>@StatusMessage</span>
                </div>
            }
            <form @onsubmit="LoginUser" autocomplete="off">
                <div class="mb-3">
                    <label for="username" class="form-label fw-semibold">Username or email address</label>
                    <input id="username" class="form-control border-secondary-subtle" type="text" @bind="Model.Username" placeholder="Username or email" required autofocus />
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <label for="password" class="form-label fw-semibold mb-0">Password</label>
                        <a href="#" class="link-secondary small">Forgot password?</a>
                    </div>
                    <input id="password" class="form-control border-secondary-subtle" type="password" @bind="Model.Password" placeholder="Password" required />
                </div>
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-success fw-semibold">Sign in</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <span class="text-muted small">New to Tachiyosi? <a href="register" class="link-primary">Create an account</a></span>
            </div>
        </div>
        <div class="text-center mt-4">
            <span class="text-secondary-50 small">© @DateTime.UtcNow.Year Tachiyosi, Inc.</span>
        </div>
    </div>
</div>